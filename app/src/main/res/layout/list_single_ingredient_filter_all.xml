<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listSingleLayoutIngredientFilterList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewIngredientFilterItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtViewTextIngredientFilterId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtViewRoundedLetter"
                android:text="@string/article_id"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/txtViewTextIngredientFilterIdFk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewTextIngredientFilterId"
                android:layout_toEndOf="@+id/txtViewRoundedLetter"
                android:text="@string/article_id"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/txtViewTextIngredientFilterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewTextIngredientFilterIdFk"
                android:layout_toEndOf="@+id/txtViewRoundedLetter"
                android:text="@string/article_id"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/txtViewTextIngredientFilterUserId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewTextIngredientFilterName"
                android:layout_toEndOf="@+id/txtViewRoundedLetter"
                android:text="@string/user_id"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtViewTextIngredientFilterComponents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewTextIngredientFilterUserId"
                android:layout_toEndOf="@+id/txtViewRoundedLetter"
                android:text="@string/user_id"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtViewRoundedLetter"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="false"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/letter_circle"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/shopping_list_letter"
                android:textColor="@color/colorWhite"
                android:textSize="40sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="64dp"
                android:background="@color/colorDivider" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listSingleLayoutIngredients"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtIngredientsViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingredients_name"
        android:textColor="@color/primary_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtIngredientsViewQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="155dp"
        android:text="@string/ingredients_quantity"
        android:textColor="@color/primary_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtIngredientsViewUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtIngredientsViewQuantity"
        android:layout_marginStart="39dp"
        android:text="@string/ingredients_unit_tag"
        android:textColor="@color/primary_text"
        android:textSize="15sp" />

</RelativeLayout>